- if signed_in?
  .span3
    .row-fluid
      .span6
        = default_photo(current_user)
      .span6
        %h6 username
        = succeed "|" do
          = link_to "Profile", current_user
        = link_to "Sign out", signout_path, method: :delete
    %br
    %ul
      %li{"data-target" => "dashboard"}
        %i.icon-home
        Dashboard
      %li{"data-target" => "dashboard"}
        %i.icon-user
        Online
        %span.badge.badge-success 3000
      %li{"data-target" => "projects"}
        %i.icon-heart
        Interests
        %span.badge.badge-important 4
      %li{"data-target" => "messages"}
        %i.icon-envelope
        Messages
        %span.badge.badge-info 3
      %li{"data-target" => "messages"}
        %i.icon-star
        Favorites
        %span.badge.badge-warning 3
      %li{"data-target" => "settings"}
        %i.icon-wrench
        Settings
      %li.active{"data-target" => "profile"}
